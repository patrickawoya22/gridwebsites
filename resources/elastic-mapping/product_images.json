PUT /product_images
{
    "settings": {
        "max_result_window": 1999999999,
        "index" : {
                "number_of_shards" : 3
            },
    "analysis": {
      "filter": {
        "autocomplete_filter":{
          "type": "edge_ngram",
          "min_gram": 1,
          "max_gram": 100
        }
      }
      , "analyzer": {
        "autocomplete":{
          "type":"custom",
          "tokenizer" : "standard",
          "filter":[
            "lowercase",
            "autocomplete_filter"
          ]
        }
      }
    }
  },
  "mappings": {
    "_doc": {
      "properties": {
        "name":{
          "type":"text",
          "analyzer":"autocomplete"
        },
        "name_no_analyzer":{"type":"keyword"},
        "product_id":{"type":"keyword"},
        "user_id":{"type":"keyword"},

        "sort":{"type":"integer"},

        "date_created":{"type": "date",
        "format": "yyyy-MM-dd HH:mm:ss|| yyyy-MM-dd HH:mm +SSSS||yyyy-MM-dd||epoch_millis"},

        "date_last_updated":{"type": "date",
        "format": "yyyy-MM-dd HH:mm:ss|| yyyy-MM-dd HH:mm +SSSS||yyyy-MM-dd||epoch_millis"}

      }
    }
  }
}